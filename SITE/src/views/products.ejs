<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- <link href="../public/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous"> -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>E-commerce</title>
</head>
<body>
    <div class="container">
        <table class="table table-striped">
            <thead class="table-dark">
            <tr>
                <th>Produto</th>
                <th>Pre√ßo</th>
                <th>&nbsp;</th>
            </tr>
        </thead>
        <tbody>
            <% products.forEach(function(product){ %>
            <tr>
                <th><%= product.attributes.name %></th>
                <th><%= product.attributes.price %></th>
                <th><a class="btn-excluir" href="http://localhost:3000<%= product.links.self %>">Excluir</a></th>
            </tr>
            <% }) %>
        </tbody>
            </table>
    </div>
   
    <script>
        const productList =document.querySelector('table')
        productList.addEventListener('click', function(event){
            // Esse metodo abaixo evita que a tag link redirecione o link
            event.preventDefault()
            const btnExluir = event.target
            if(btnExluir.classList.contains('btn-excluir')){
               const url = btnExluir.href
               fetch(url, {
                   method: 'DELETE'
               }).then(function(){
                    btnExluir.parentNode.parentNode.remove();
               })
            }

        })
    </script>
   
</body>
</html>